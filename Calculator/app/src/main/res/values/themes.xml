<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Library" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge" />

    <style name="Theme.Library.btn_orange" parent="Theme.Library">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/orange3</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">@dimen/margin_32dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/edt_background_shape</item>
    </style>

    <style name="Theme.Library.btn_gray" parent="Theme.Library">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.Library.btn_black" parent="Theme.Library">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/dark</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Theme.Library.edt_login" parent="Theme.Library">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:layout_margin">@dimen/margin_32dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/lightorange</item>
        <item name="android:padding">@dimen/margin_16dp</item>
        <item name="android:background">@drawable/edt_background_shape</item>
    </style>

</resources>